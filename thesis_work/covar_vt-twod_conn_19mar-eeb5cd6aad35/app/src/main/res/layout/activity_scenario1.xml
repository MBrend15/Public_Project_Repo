<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scenario1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vt.itsl.twod_connect.Scenario1">

    <fragment
        android:id="@+id/map3"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="425dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_scen1_PID"
        android:text="Participant ID: "
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/map3"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_scen1PID"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lbl_scen1_PID"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="1dip"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but_scen1Start"
        android:text="Start-1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_scen1PID"
        android:layout_marginTop="1dip"
        android:layout_marginLeft="10dip"
        android:onClick="start_click"
        style="@style/Widget.AppCompat.Button.Small" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but_scen1Start2"
        android:text="Find"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/but_scen1Start"
        android:layout_marginRight="10dip"
        android:onClick="start2_click"
        style="@style/Widget.AppCompat.Button.Small"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/but_scen1Start"
        android:layout_marginTop="1dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_lay1"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_scen1HA"
                android:text="High Threats:"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="3dip"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_scen1HA"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="1dip">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_scen1HA"
                    android:inputType="textMultiLine"
                    />

            </ScrollView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_lay2"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_closeLow"
                android:text="Closest Low\nThreat:"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_closeLow"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lbl_closeLow"
                android:layout_marginRight="3dip"
                android:layout_marginLeft="1dip"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
