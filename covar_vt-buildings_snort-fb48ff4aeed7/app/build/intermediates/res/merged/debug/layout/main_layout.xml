<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start-Pre"
        android:id="@+id/start_button"
        android:layout_below="@+id/title_text"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:onClick="Start_register"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:layout_toRightOf="@+id/start_button"
        android:layout_above="@+id/build_text"
        android:ems="10"
        android:id="@+id/txt_PartID" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/build_text"
        android:layout_above="@+id/listView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:text="Refresh Query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butRefresh"
            android:layout_gravity="bottom"
            style="?android:attr/buttonStyleSmall"
            android:onClick="RefreshQuery"/>

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txtQuery"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <View
            android:id="@+id/fl_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVT 1.0"
        android:id="@+id/title_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building: "
        android:id="@+id/build_text"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_below="@+id/start_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participant ID"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lbl_partID"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/title_text"
        android:layout_toEndOf="@+id/title_text"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="Total Alerts:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/txt_totHits"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_totHits"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txt_queryProg" />


</RelativeLayout>